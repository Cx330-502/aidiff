{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch:esbuild",
            "label": "npm: watch:esbuild",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "watch"
            },
            "problemMatcher": {
                "owner": "esbuild",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[watch\\] build started",
                    "endsPattern": "^\\[watch\\] build finished"
                }
            }
        }
    ]
}